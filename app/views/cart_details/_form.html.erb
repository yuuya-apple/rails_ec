<%=form_with(model: Order,local: true) do |f| %>
  <div class="row g-3">
    <div class="col-sm-6">
      <%=f.label :firstname , for:"firstName" , class:"form-label"%>
      <%=f.text_field :firstname,class:"form-control",id:"firstName",placeholder:"",value:"",required:true %>
      <div class="invalid-feedback">
        Valid first name is required.
      </div>
    </div>
    <div class="col-sm-6">
      <%=f.label :lastname , for:"firstName" , class:"form-label"%>
      <%=f.text_field :lastname,class:"form-control",id:"lastName",placeholder:"",value:"",required:true %>
      <div class="invalid-feedback">
        Valid last name is required.
      </div>
    </div>
    <div class="col-12">
      <%=f.label :username , for:"username" , class:"form-label"%>
      <div class="input-group has-validation">
        <span class="input-group-text">@</span>
        <%=f.text_field :username,class:"form-control",id:"username",placeholder:"Username",required:true %>
        <div class="invalid-feedback">
          Your username is required.
        </div>
      </div>
    </div>
    <div class="col-12">
      <%=f.label :email , for:"email" , class:"form-label" %>
      <%=f.email_field :email,class:"form-control",id:"email",placeholder:"you@example.com",required:true %>
      <div class="invalid-feedback">
        Please enter a valid email address for shipping updates.
      </div>
    </div>
    <div class="col-12">
      <%=f.label :address , for:"address" , class:"form-label" %>
      <%=f.text_field :address,class:"form-control",id:"address",placeholder:"1234 Main St",required:true %>
      <div class="invalid-feedback">
        Please enter your shipping address.
      </div>
    </div>
    <div class="col-12">
      <%=f.label :address2 , for:"address2" , class:"form-label" do%>
        Address2 <span class="text-body-secondary">(Optional)</span>
      <% end%>
      <%=f.text_field :address2,class:"form-control",id:"address",placeholder:"Apartment or suite"%>
    </div>
    <div class="col-md-5">
      <%=f.label :country , for:"country" , class:"form-label" %>
      <%=f.text_field :country,class:"form-control",id:"country",required:true %>
      <div class="invalid-feedback">
        Please select a valid country.
      </div>
    </div>
    <div class="col-md-4">
      <%=f.label :state , for:"state" , class:"form-label" %>
      <%=f.text_field :state,class:"form-control",id:"state",required:true %>
      <div class="invalid-feedback">
        Please provide a valid state.
      </div>
    </div>
    <div class="col-md-3">
      <%=f.label :zip , for:"zip" , class:"form-label" %>
      <%=f.text_field :zip,class:"form-control",id:"zip",required:true,placeholder:"" %>
      <div class="invalid-feedback">
        Zip code required.
      </div>
    </div>
  </div>
  <hr class="my-4">
  <div class="form-check">
    <%=f.check_box :is_same_address,class:"form-check-input",id:"same-address" %>
    <%=f.label :is_same_address , for:"same-address" , class:"form-check-label" do%>
      Shipping address is the same as my billing address
    <%end%>
  </div>
  <div class="form-check">
    <%=f.check_box :is_save_info,class:"form-check-input",id:"save-info" %>
    <%=f.label :is_save_info , for:"save-info" , class:"form-check-label" do%>
      Save this information for next time
    <%end%>
  </div>
  <hr class="my-4">
  <h4 class="mb-3">Credit card</h4>
  <div class="row gy-3">
    <div class="col-md-6">
      <%=f.label :name_on_card , for:"cc-name" , class:"form-label" %>
      <%=f.text_field :name_on_card,class:"form-control",id:"cc-name",placeholder:"",required:true %>
      <small class="text-body-secondary">Full name as displayed on card</small>
      <div class="invalid-feedback">
        Name on card is required
      </div>
    </div>
    <div class="col-md-6">
      <%=f.label :credit_card_number , for:"cc-number" , class:"form-label" %>
      <%=f.text_field :credit_card_number,class:"form-control",id:"cc-number",placeholder:"",required:true %>
      <div class="invalid-feedback">
        Credit card number is required
      </div>
    </div>
    <div class="col-md-3">
      <%=f.label :expiration , for:"cc-expiration" , class:"form-label" %>
      <%=f.number_field :expiration,class:"form-control",id:"cc-expiration",placeholder:"",required:true,type:"num" %>
      <div class="invalid-feedback">
        Expiration date required
      </div>
    </div>
    <div class="col-md-3">
      <%=f.label :cvv , for:"cc-cvv" , class:"form-label" do%>
        CVV
      <%end%>
      <%=f.number_field :cvv,class:"form-control",id:"cc-cvv",placeholder:"",required:true,type:"num"%>
      <div class="invalid-feedback">
        Security code required
      </div>
    </div>
  </div>
  <hr class="my-4">
  <%=f.submit('購入する',class:"w-100 btn btn-primary btn-lg") %>
<%end%>